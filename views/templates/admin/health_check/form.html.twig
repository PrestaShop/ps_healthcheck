{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain "Admin.Design.Feature" %}
{% form_theme healthCheckConfigForm '@Modules/ps_healthcheck/views/templates/admin/fields.html.twig' %}

{% block content %}
    {{ form_start(healthCheckConfigForm, {'action': url('admin_healthcheck_configure_process'), 'attr': {'class': 'form', 'id': 'health_check_config_form'}}) }}
    <div class="row justify-content-center">
        {% block health_check_config_form %}
            <div class="col-xl-10">
                <div class="card">
                    <h3 class="card-header">
                        <i class="material-icons">mode_edit</i>
                        {{ 'Edit the healthcheck config.'|trans({}, 'Modules.HealthCheck.Admin') }}
                    </h3>
                    <div class="card-block row">
                        <div class="card-text">
                            {{ form_row(healthCheckConfigForm.health_check_config.token) }}
                            {{ form_row(healthCheckConfigForm.health_check_config.ips) }}

                            {{ form_rest(healthCheckConfigForm.health_check_config) }}
                            {% do healthCheckConfigForm.health_check_config.setRendered %}
                            {{ form_rest(healthCheckConfigForm) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="{{ url('admin_healthcheck_configure') }}" class="btn btn-secondary">{{ 'Cancel'|trans({}, 'Admin.Actions') }}</a>
                            <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
    {{ form_end(healthCheckConfigForm) }}
{% endblock %}
